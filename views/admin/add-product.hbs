<section class="content-main">
  <form action="/admin/add-product" method="POST">

    <div class="row">
      <!-- Header -->
      <div class="col-9">
        <div class="content-header">
          <h2 class="content-title">Add New Product</h2>
          <button type="submit" class="btn btn-md rounded font-sm hover-up">
            Add Product
          </button>
        </div>
      </div>

      <!-- Main Form -->
      <div class="col-lg-6">
        <div class="card mb-4">
          <div class="card-header">
            <h4>Basic</h4>
          </div>

          <div class="card-body">

            <!-- Product Name -->
            <div class="mb-4">
              <label class="form-label">Product Name</label>
              <input
                type="text"
                name="productName"
                class="form-control"
                placeholder="Type here"
                required
              />
            </div>

            <!-- Brand & Category -->
            <div class="row gx-2">
              <div class="col-lg-6 mb-3">
                <label class="form-label">Brand Name</label>
                <select class="form-select" name="brand" required>
                  <option value="">Select brand</option>
                  <option>Belle</option>
                  <option>Blue Lady</option>
                  <option>Coach</option>
                  <option>DavidOff</option>
                  <option>YVES Saint Laurent</option>
                  <option>Dior</option>
                  <option>Dolce</option>
                  <option>Givenchy</option>
                  <option>Jimmy Choo</option>
                  <option>Kayali</option>
                  <option>Kenzo</option>
                  <option>Narciso Rodrigues</option>
                  <option>Paco Rabanne</option>
                  <option>Poison Dior</option>
                  <option>Shalimar</option>
                  <option>Skinn</option>
                </select>
              </div>

              <div class="col-lg-6 mb-3">
                <label class="form-label">Category</label>
                <select class="form-select" name="category" required>
                  <option value="">Select category</option>
                  <option>Men</option>
                  <option>Women</option>
                </select>
              </div>
            </div>

            <!-- Fragrance & Volume -->
            <div class="row gx-2">
              <div class="col-lg-6 mb-3">
                <label class="form-label">Fragrance Type</label>
                <select class="form-select" name="fragranceType">
                  <option>Fresh / Citrus</option>
                  <option>Woody</option>
                  <option>Oriental / Spicy</option>
                  <option>Aromatic / Herbal</option>
                  <option>Fruity</option>
                  <option>Incense</option>
                  <option>Floral</option>
                  <option>White Floral</option>
                  <option>Gourmand</option>
                  <option>Oriental / Amber</option>
                  <option>Aquatic / Marine</option>
                  <option>Floral-Fruity</option>
                  <option>Honeyed</option>
                  <option>Ozonic</option>
                  <option>Chypre</option>
                </select>
              </div>

              <div class="col-lg-6 mb-3">
                <label class="form-label">Volume</label>
                <select class="form-select" name="volume">
                  <option>50 ML</option>
                  <option>100 ML</option>
                  <option>150 ML</option>
                  <option>200 ML</option>
                  <option>250 ML</option>
                  <option>300 ML</option>
                </select>
              </div>
            </div>

            <!-- Descriptions -->
            <div class="mb-4">
              <label class="form-label">Short Description</label>
              <textarea
                name="shortDescription"
                class="form-control"
                rows="3"
              ></textarea>
            </div>

            <div class="mb-4">
              <label class="form-label">Full Description</label>
              <textarea
                name="fullDescription"
                class="form-control"
                rows="5"
              ></textarea>
            </div>

            <!-- Pricing -->
            <div class="row gx-2">
              <div class="col-lg-6 mb-3">
                <label class="form-label">Price</label>
                <input
                  type="number"
                  name="regularPrice"
                  class="form-control"
                  step="0.01"
                  required
                />
              </div>

              <div class="col-lg-6 mb-3">
                <label class="form-label">Discount Price</label>
                <input
                  type="number"
                  name="discountPrice"
                  class="form-control"
                  step="0.01"
                />
              </div>
            </div>

            <!-- Stock & Rating -->
            <div class="row gx-2">
              <div class="col-lg-6 mb-3">
                <label class="form-label">Stock</label>
                <input
                  type="number"
                  name="stock"
                  class="form-control"
                  required
                />
              </div>

              <div class="col-lg-6 mb-3">
                <label class="form-label">Rating</label>
                <input
                  type="number"
                  name="rating"
                  class="form-control"
                  step="0.1"
                  max="5"
                />
              </div>
            </div>

          </div>
        </div>
      </div>

      <!-- Media Upload -->
      {{! <div class="col-lg-3">
        <div class="card mb-4">
          <div class="card-header">
            <h4>Media</h4>
          </div>
          <div class="card-body">
            <div class="input-upload">
              <img src="/adminAssets/imgs/theme/upload.svg" alt="Upload" />
              <input class="form-control" type="file" name="images" multiple />
            </div>
          </div>
        </div>
      </div> }}
      <!-- Thumbnail -->
      <div class="row">
        <div class="col-md-4 mb-4">
          <label class="form-label">Thumbnail Image</label>
          <input
            class="form-control"
            type="file"
            name="thumbnail"
            accept="image/*"
            required
          />
        </div>
      </div>

      <!-- Product Images -->
      <div class="col-md-4 mb-4">
        <label class="form-label">Product Images(Max 3)</label>
        <input
          class="form-control"
          type="file"
          name="productImages"
          accept="image/*"
          multiple
          required
        />
      </div>

    </div>
  </form>
</section>