<section class="content-main">

  <!-- Header -->
  <div class="content-header">
    <div>
      <h2 class="content-title card-title">Products List</h2>
      <p>Find the perfect perfumes for everyday use and special events.</p>
    </div>
    <div>
      <a href="#" class="btn btn-light rounded font-md">Export</a>
      <a href="#" class="btn btn-light rounded font-md">Import</a>
      <a href="/admin/add-product" class="btn btn-primary btn-sm rounded">
        Create new
      </a>
    </div>
  </div>

  <!-- Filters -->
  <header class="card card-body mb-4">
    <div class="row gx-3 align-items-center">
      <div class="col-lg-4 col-md-6">
        <input type="text" placeholder="Search..." class="form-control" />
      </div>

      <div class="col-lg-2 col-md-3 col-6">
        <select class="form-select">
          <option>All Brands</option>
          <option>Dior</option>
          <option>Gucci</option>
          <option>YSL</option>
          <option>Versace</option>
        </select>
      </div>

      <div class="col-lg-2 col-md-3 col-6">
        <select class="form-select">
          <option>Category</option>
          <option>Men</option>
          <option>Women</option>
        </select>
      </div>

      <div class="col-lg-2 col-md-3 col-6">
        <select class="form-select">
          <option>Latest added</option>
          <option>Cheap first</option>
          <option>Most viewed</option>
        </select>
      </div>
    </div>
  </header>

  <!-- Products Grid -->
  <div class="row g-4">

    {{#each products}}
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="card h-100 card-user">

        <!-- Image (FIXED HEIGHT – NO OVERLAP) -->
        <div
          class="card-header bg-white d-flex align-items-center justify-content-center"
          style="height: 200px;"
        >
          <img
            src="{{this.thumbnail}}"
            alt="Product Image"
            class="img-fluid"
            style="max-height:160px; max-width:100%; object-fit:contain;"
          />
        </div>

        <!-- Card Body -->
        <div class="card-body d-flex flex-column">

          <!-- Product Name -->
          <h6 class="card-title text-center fw-bold mb-1">
            {{this.productName}}
          </h6>

          <!-- Brand & Category -->
          <p class="text-center mb-1" style="font-size:12px;">
            <span class="fw-semibold text-danger">{{this.brand}}</span>
            ·
            <span class="text-muted">{{this.category}}</span>
          </p>

          <!-- Short Description -->
          <p
            class="text-muted text-center mb-2 text-clamp-2"
            style="font-size:11px; line-height:1.3;"
          >
            {{this.shortDescription}}
          </p>

          <!-- Rating -->
          <p class="text-center mb-2" style="font-size:12px;">
            ⭐ <strong>{{this.rating}}</strong> / 5
          </p>

          <!-- Price -->
          <div class="text-center mt-auto mb-2">
            <span class="fw-bold text-success">
              ₹{{this.discountPrice}}
            </span>
            <span class="text-muted text-decoration-line-through ms-1">
              ₹{{this.price}}
            </span>
          </div>

          <!-- Action Buttons -->
          <div class="d-flex gap-2">
            <a
              href="/admin/product/edit/{{this._id}}"
              class="btn btn-sm btn-brand w-50"
            >
              <i class="material-icons md-edit"></i> Edit
            </a>

            <form
              action="/admin/product/{{this._id}}/delete"
              method="POST"
              class="w-50"
            >
              <button
                type="submit"
                class="btn btn-sm btn-light w-100"
              >
                <i class="material-icons md-delete_forever"></i> Delete
              </button>
            </form>
          </div>

        </div>
      </div>
    </div>
    {{/each}}

  </div>
</section>
 